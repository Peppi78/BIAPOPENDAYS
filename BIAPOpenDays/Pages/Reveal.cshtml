@page "{id}"


@model BIAPOpenDays.Pages.RevealModel
@{
    ViewData["Title"] = "Reveal";
    Layout = "~/Pages/_LayoutReveal.cshtml";

     var pageId = RouteData.Values["id"].ToString();

}




@switch (pageId)
{
    case "1":
        Html.RenderPartial("99_Reveal/_00_session_open", Model);

        Html.RenderPartial("99_Reveal/_01a_session.cshtml", Model);
        Html.RenderPartial("99_Reveal/_01b_session.cshtml", Model);
        Html.RenderPartial("99_Reveal/_01c_session.cshtml", Model);
        Html.RenderPartial("99_Reveal/_01d_session.cshtml", Model);

        Html.RenderPartial("99_Reveal/_99_session_close.cshtml", Model);
        break;
    case "2":
        Html.RenderPartial("99_Reveal/_02_session.cshtml", Model);
        break;
    default:
        break;
}

@section Scripts
    {
<script>
                // More info about config & dependencies:
                // - https://github.com/hakimel/reveal.js#configuration
                // - https://github.com/hakimel/reveal.js#dependencies
                Reveal.initialize({
                    dependencies: [
                        { src: 'plugin/markdown/marked.js' },
                        { src: 'plugin/markdown/markdown.js' },
                        { src: 'plugin/notes/notes.js', async: true },
                        { src: 'plugin/highlight/highlight.js', async: true, callback: function () { hljs.initHighlightingOnLoad(); } }
                    ]
                });
</script>
        }



